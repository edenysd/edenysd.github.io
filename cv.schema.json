{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "CV",
  "type": "object",
  "properties": {
    "basics": {
      "$ref": "#/definitions/Basics"
    },
    "work": {
      "type": "array",
      "items": { "$ref": "#/definitions/Work" }
    },
    "education": {
      "type": "array",
      "items": { "$ref": "#/definitions/Education" }
    },
    "awards": {
      "type": "array",
      "items": { "$ref": "#/definitions/Awards" }
    },
    "certificates": {
      "type": "array",
      "items": { "$ref": "#/definitions/Certificates" }
    },
    "publications": {
      "type": "array",
      "items": { "$ref": "#/definitions/Publications" }
    },
    "skills": {
      "type": "array",
      "items": { "$ref": "#/definitions/Skills" }
    },
    "languages": {
      "type": "array",
      "items": { "$ref": "#/definitions/Languages" }
    },
    "interests": {
      "type": "array",
      "items": { "$ref": "#/definitions/Interests" }
    },
    "references": {
      "type": "array",
      "items": { "$ref": "#/definitions/References" }
    },
    "projects": {
      "type": "array",
      "items": { "$ref": "#/definitions/Projects" }
    }
  },
  "required": [
    "basics",
    "work",
    "education",
    "awards",
    "certificates",
    "publications",
    "skills",
    "languages",
    "interests",
    "references",
    "projects"
  ],
  "definitions": {
    "Basics": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "label": { "type": "string" },
        "image": { "type": "string" },
        "email": { "type": "string" },
        "phone": { "type": "string" },
        "url": { "type": "string" },
        "summary": { "type": "string" },
        "location": { "$ref": "#/definitions/Location" },
        "profiles": {
          "type": "array",
          "items": { "$ref": "#/definitions/Profiles" }
        }
      },
      "required": [
        "name",
        "label",
        "image",
        "email",
        "phone",
        "url",
        "summary",
        "location",
        "profiles"
      ]
    },
    "Location": {
      "type": "object",
      "properties": {
        "address": { "type": "string" },
        "postalCode": { "type": "string" },
        "city": { "type": "string" },
        "countryCode": { "type": "string" },
        "region": { "type": "string" }
      },
      "required": ["address", "postalCode", "city", "countryCode", "region"]
    },
    "Profiles": {
      "type": "object",
      "properties": {
        "network": { "type": "string" },
        "username": { "type": "string" },
        "url": { "type": "string" }
      },
      "required": ["network", "username", "url"]
    },
    "Work": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "position": { "type": "string" },
        "url": { "type": "string" },
        "startDate": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "endDate": {
          "type": ["string", "null"],
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "summary": { "type": "string" },
        "highlights": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": [
        "name",
        "position",
        "url",
        "startDate",
        "summary",
        "highlights"
      ]
    },
    "Skills": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "level": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["name", "level", "keywords"]
    },
    "Awards": {
      "type": "object",
      "properties": {
        "title": { "type": "string" },
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "awarder": { "type": "string" },
        "summary": { "type": "string" }
      },
      "required": ["title", "date", "awarder", "summary"]
    },
    "Certificates": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "date": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "issuer": { "type": "string" },
        "url": { "type": "string" }
      },
      "required": ["name", "date", "issuer", "url"]
    },
    "Publications": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "publisher": { "type": "string" },
        "releaseDate": {
          "type": "string",
          "pattern": "^\\d{4}-\\d{2}-\\d{2}$"
        },
        "url": { "type": "string" },
        "summary": { "type": "string" }
      },
      "required": ["name", "publisher", "releaseDate", "url", "summary"]
    },
    "Education": {
      "type": "object",
      "properties": {
        "institution": { "type": "string" },
        "url": { "type": "string" },
        "area": { "type": "string" },
        "studyType": { "type": "string" },
        "startDate": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "endDate": { "type": "string", "pattern": "^\\d{4}-\\d{2}-\\d{2}$" },
        "score": { "type": "string" },
        "courses": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": [
        "institution",
        "url",
        "area",
        "studyType",
        "startDate",
        "endDate",
        "score",
        "courses"
      ]
    },
    "Languages": {
      "type": "object",
      "properties": {
        "language": {
          "type": "string",
          "enum": [
            "Spanish",
            "English",
            "German",
            "France",
            "Italian",
            "Korean",
            "Portuguese",
            "Chinese",
            "Arabic",
            "Dutch",
            "Finnish",
            "Russian",
            "Turkish",
            "Hindi",
            "Bengali"
          ]
        },
        "fluency": { "type": "string" }
      },
      "required": ["language", "fluency"]
    },
    "Projects": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "isActive": { "type": "boolean" },
        "description": { "type": "string" },
        "highlights": {
          "type": "array",
          "items": { "type": "string" }
        },
        "url": { "type": "string" },
        "github": { "type": ["string", "null"] }
      },
      "required": ["name", "isActive", "description", "highlights", "url"]
    },
    "Interests": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "keywords": {
          "type": "array",
          "items": { "type": "string" }
        }
      },
      "required": ["name", "keywords"]
    },
    "References": {
      "type": "object",
      "properties": {
        "name": { "type": "string" },
        "reference": { "type": "string" }
      },
      "required": ["name", "reference"]
    }
  }
}
